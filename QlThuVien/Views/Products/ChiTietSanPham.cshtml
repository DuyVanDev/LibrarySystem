@model QlThuVien.Models.Book
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background: url(https://tailieu.hiepsiit.com/public/images/bg-pattern.png),#ededed; width : 100%;padding : 100px 20px 20px 20px;">

    <div class="container">
        <div class="card" style="padding: 30px">
            <div class="row">
                <div class="col-md-9 col-xs-9">
                    <div class="header-top" >
                        <h2>@Model.BookTitle</h2>

                    </div>
                    <div>
                        <iframe src="@Model.FileUpLoad" style="width : 100% ; " height="600" type='application/pdf'>
                        </iframe>
                    </div>
                    
                    <p style="margin-top:20px;" class="desc">Mô tả: @Model.Description</p>
                    <p style="margin-top:20px;"  class="desc">Tác giả: @Model.BookAuthor</p>
                    <p style="margin-top:20px;" class="desc">Bản quyền: @Model.CopyRights</p>
                    <p style="margin-top:20px;" class="desc">Ngày phát hành: @Model.Date</p>
                    <p style="margin-top:20px;" class="desc">Nguồn: @Model.Source</p>
                    <p style="margin-top:20px;" class="desc">Mã số ISBN: @Model.ISBN</p>
                    <p style="margin-top:20px;" class="desc">Nhà xuất bản: @Model.Publisher</p>
                    <p style="margin-top:20px;" class="desc">Ngôn ngữ: @Model.Language</p>
                </div>

                <div class="col-md-3 col-xs-3 col-sm-12">
                    <div style="display : flex;align-items : center;justify-content : center">                     
                            @if (Model.Quantity > 0)
                            {
                                <div class="download">
                                    <button class="btn btn-success btn-borrow"><a style="color : white;padding : 4px 8px; text-decoration: none" href="@Url.Action("Borrow", "Home", new { bookId = Model.BookId })">Mượn</a></button>

                                </div>
                            }
                            else
                            {
                                <div class="download">
                                    <button class="btn btn-success btn-borrow" disabled="false"><a style="color : white;padding : 4px 8px; text-decoration: none" href="@Url.Action("Borrow", "Home", new { bookId = Model.BookId })">Mượn</a></button>

                                </div>
                            }
                        
                        </div>
                    <div class="blockSidebar" style="position : sticky; top : 100px; margin-top : 20px">
                        <h2 class="titleBlock event">
                           Tài liệu khác
                        </h2>
                        <div class="bodyBlock">
                            <div>
                                <ul class="nav-left" style="margin-top: 5px; margin-bottom: 5px;">
                                    @foreach (var item in ViewBag.data)
                                    {
                                        <li>
                                            <img src="@item.BookImage" width="70px" height="100px" />
                                            <a href="">@item.BookTitle</a>
                                        </li>
                                    }
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    </div>


