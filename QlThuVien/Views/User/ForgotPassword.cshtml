
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


@model QlThuVien.Models.User
@using (Html.BeginForm())
{

    <h3 align="center" style="margin-bottom : 20px;">Quên mật khẩu ?</h3>
    <h6 class="fw-light">Nhập vào Email tài khoản </h6>

    <form class="pt-3" >
        <div class="form-fgpw" >
            <div class="form-group col-md-5 col-12 ">
                @Html.TextBox("Email", "", null, new { @class = "form-control form-control-lg", placeholder = "Nhập vào email tài khoản" })

            </div>


            <div class="mt-3 col-md-3 col-12">
                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Gửi</button>
            </div>
            <div class="text-success">
                <p style="text-align :center; margin-top : 10px;">@ViewBag.Message</p>
            </div>
        </div>
    </form>
}
